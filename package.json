{
	"name": "ganttwbs",
	"version": "0.1.0",
	"private": true,
	"description": "できるか知らんけどガントチャート的なものを表示・編集したい。",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sk-0520/ganttwbs.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/sk-0520/ganttwbs/issues"
	},
	"homepage": "https://github.com/sk-0520/ganttwbs#readme",
	"scripts": {
		"code:typescript": "tsc",
		"code:lint": "next lint --dir .",
		"code": "npm-run-all --sequential code:typescript code:lint",
		"test:script": "jest --runInBand",
		"test": "npm-run-all --sequential test:script",
		"dev": "next dev",
		"dev-win": "set NODE_OPTIONS=--inspect && next dev",
		"build": "next build",
		"start": "next start",
		"lint-fix": "next lint --fix --dir .",
		"check": "ncu",
		"update": "ncu -u && npm install"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				"tsconfig.json"
			]
		},
		"testMatch": [
			"**/test/scripts/**/*"
		],
		"moduleNameMapper": {
			"@/(.+)": "<rootDir>/src/$1"
		},
		"collectCoverage": true,
		"coverageDirectory": "coverage"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.5.0",
		"cdate": "^0.0.5",
		"classnames": "^2.3.2",
		"i18next": "^22.4.15",
		"next": "13.3.0",
		"next-i18next": "^13.2.2",
		"react": "18.2.0",
		"react-color": "^2.19.3",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.43.9",
		"react-i18next": "^12.2.0",
		"react-icons": "^4.8.0",
		"react-tabs": "^6.0.0",
		"uuid": "^9.0.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@ctrl/tinycolor": "^3.6.0",
		"@types/jest": "^29.5.1",
		"@types/node": "18.15.13",
		"@types/react": "18.0.37",
		"@types/react-color": "^3.0.6",
		"@types/react-dom": "18.0.11",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"eslint": "^8.38.0",
		"eslint-config-next": "13.3.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-no-relative-import-paths": "^1.5.2",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"npm-check-updates": "^16.10.9",
		"npm-run-all": "^4.1.5",
		"reset-css": "^5.0.1",
		"sass": "^1.62.0",
		"ts-essentials": "^9.3.1",
		"ts-jest": "^29.1.0",
		"typescript": "5.0.4"
	}
}
