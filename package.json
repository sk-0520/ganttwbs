{
	"name": "ganttwbs",
	"version": "0.0.0",
	"private": true,
	"description": "できるか知らんけどガントチャート的なものを表示・編集したい。",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sk-0520/ganttwbs.git"
	},
	"author": "sk",
	"license": "WTFPL2",
	"bugs": {
		"url": "https://github.com/sk-0520/ganttwbs/issues"
	},
	"homepage": "https://github.com/sk-0520/ganttwbs#readme",
	"scripts": {
		"watch-typescript": "tsc --watch",
		"code:typescript": "tsc",
		"code:markup": "markuplint --problem-only src/**/*.tsx",
		"code:lint": "next lint --dir .",
		"//code": "npm-run-all --sequential code:typescript code:markup code:lint",
		"code": "npm-run-all --sequential code:typescript",
		"test:script": "jest --runInBand",
		"test": "npm-run-all --sequential test:script",
		"dev": "next dev",
		"dev-win": "set NODE_OPTIONS=--inspect && npm run dev",
		"build": "next build",
		"start": "next start",
		"lint-fix": "next lint --fix --dir .",
		"favicon": "ts-node --project tsconfig.local.json ./generator/favicon-generator.ts",
		"license": "ts-node --project tsconfig.local.json ./generator/license-generator.ts",
		"npm-check": "ncu",
		"npm-update": "ncu -u && npm install && npm run license",
		"analyze": "ANALYZE=true npm run build"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				"tsconfig.json"
			]
		},
		"testMatch": [
			"**/test/scripts/**/*"
		],
		"moduleNameMapper": {
			"@/(.+)": "<rootDir>/src/$1"
		},
		"collectCoverage": true,
		"coverageDirectory": "coverage"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.6.0",
		"i18next": "^23.11.5",
		"next-i18next": "^15.3.0",
		"path-browserify": "^1.0.1",
		"react": "18.3.1",
		"react-color": "^2.19.3",
		"react-dom": "18.3.1",
		"react-hook-form": "^7.52.0",
		"react-i18next": "^14.1.2",
		"react-icons": "^5.2.1",
		"react-tabs": "^6.0.2"
	},
	"devDependencies": {
		"@ctrl/tinycolor": "^4.1.0",
		"@markuplint/jsx-parser": "^4.7.4",
		"@markuplint/react-spec": "^4.5.4",
		"@next/bundle-analyzer": "^14.2.4",
		"@types/jest": "^29.5.12",
		"@types/license-checker": "^25.0.6",
		"@types/node": "^20.14.2",
		"@types/path-browserify": "^1.0.2",
		"@types/react": "18.3.3",
		"@types/react-color": "^3.0.12",
		"@types/react-dom": "18.3.0",
		"@types/uuid": "^9.0.8",
		"cdate": "^0.0.7",
		"classnames": "^2.5.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.5.0",
		"exceljs": "^4.4.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jotai": "^2.8.3",
		"license-checker": "^25.0.1",
		"markuplint": "^4.9.1",
		"minify-xml": "^4.4.1",
		"next": "^14.2.4",
		"next-i18next": "^15.3.0",
		"npm-check-updates": "^16.14.20",
		"npm-run-all": "^4.1.5",
		"reset-css": "^5.0.2",
		"sass": "^1.77.5",
		"sharp": "^0.33.4",
		"sharp-ico": "^0.1.5",
		"ts-jest": "^29.1.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5",
		"uuid": "^10.0.0",
		"zod": "^3.23.8"
	}
}
