{
	"name": "gangangan",
	"version": "0.1.0",
	"private": true,
	"description": "できるか知らんけどガントチャート的なものを表示・編集したい。",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sk-0520/gangangan.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/sk-0520/gangangan/issues"
	},
	"homepage": "https://github.com/sk-0520/gangangan#readme",
	"scripts": {
		"typescript": "npx tsc",
		"lint": "next lint --dir .",
		"lint-fix": "next lint --fix --dir .",
		"test:script": "jest --runInBand",
		"test": "npm-run-all --sequential test:script",
		"dev": "next dev",
		"dev-win": "set NODE_OPTIONS=--inspect && next dev",
		"build": "next build",
		"start": "next start",
		"check": "ncu",
		"update": "ncu -u && npm install"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				"tsconfig.json"
			]
		},
		"testMatch": [
			"**/test/scripts/**/*"
		],
		"collectCoverage": true,
		"coverageDirectory": "coverage"
	},
	"dependencies": {
		"@types/node": "18.15.3",
		"@types/react": "18.0.28",
		"@types/react-dom": "18.0.11",
		"i18next": "^22.4.11",
		"next": "13.2.4",
		"next-i18next": "^13.2.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.43.5",
		"react-i18next": "^12.2.0",
		"react-tabs": "^6.0.0",
		"typescript": "4.9.5",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/jest": "^29.4.2",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"eslint": "^8.36.0",
		"eslint-config-next": "13.2.4",
		"eslint-import-resolver-typescript": "^3.5.3",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"npm-check-updates": "^16.7.12",
		"npm-run-all": "^4.1.5",
		"reset-css": "^5.0.1",
		"sass": "^1.59.3",
		"ts-jest": "^29.0.5"
	}
}
