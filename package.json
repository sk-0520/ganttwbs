{
	"name": "ganttwbs",
	"version": "0.0.0",
	"private": true,
	"description": "できるか知らんけどガントチャート的なものを表示・編集したい。",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sk-0520/ganttwbs.git"
	},
	"author": "sk",
	"license": "WTFPL2",
	"bugs": {
		"url": "https://github.com/sk-0520/ganttwbs/issues"
	},
	"homepage": "https://github.com/sk-0520/ganttwbs#readme",
	"scripts": {
		"watch-typescript": "tsc --watch",
		"code:typescript": "tsc",
		"code:markup": "markuplint --problem-only src/**/*.tsx",
		"code:lint": "next lint --dir .",
		"code": "npm-run-all --sequential code:typescript code:markup code:lint",
		"test:script": "jest --runInBand",
		"test": "npm-run-all --sequential test:script",
		"dev": "next dev",
		"dev-win": "set NODE_OPTIONS=--inspect && npm run dev",
		"build": "next build",
		"start": "next start",
		"lint-fix": "next lint --fix --dir .",
		"favicon": "ts-node --project tsconfig.local.json ./generator/favicon.ts",
		"license": "ts-node --project tsconfig.local.json ./generator/license-generator.ts",
		"check": "ncu",
		"update": "ncu -u && npm install && npm run license",
		"analyze": "ANALYZE=true npm run build"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				"tsconfig.json"
			]
		},
		"testMatch": [
			"**/test/scripts/**/*"
		],
		"moduleNameMapper": {
			"@/(.+)": "<rootDir>/src/$1"
		},
		"collectCoverage": true,
		"coverageDirectory": "coverage"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.5.1",
		"cdate": "^0.0.5",
		"classnames": "^2.3.2",
		"exceljs": "^4.3.0",
		"i18next": "^22.5.0",
		"jotai": "^2.1.0",
		"next": "13.4.3",
		"next-i18next": "^13.2.2",
		"path-browserify": "^1.0.1",
		"react": "18.2.0",
		"react-color": "^2.19.3",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.43.9",
		"react-i18next": "^12.3.1",
		"react-icons": "^4.8.0",
		"react-tabs": "^6.0.1",
		"uuid": "^9.0.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@ctrl/tinycolor": "^3.6.0",
		"@markuplint/jsx-parser": "^3.7.0",
		"@markuplint/react-spec": "^3.8.0",
		"@next/bundle-analyzer": "^13.4.3",
		"@types/jest": "^29.5.1",
		"@types/license-checker": "^25.0.3",
		"@types/node": "^20.2.3",
		"@types/path-browserify": "^1.0.0",
		"@types/react": "18.2.6",
		"@types/react-color": "^3.0.6",
		"@types/react-dom": "18.2.4",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.41.0",
		"eslint-config-next": "13.4.3",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-no-relative-import-paths": "^1.5.2",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"license-checker": "^25.0.1",
		"markuplint": "^3.10.0",
		"minify-xml": "^3.4.0",
		"npm-check-updates": "^16.10.12",
		"npm-run-all": "^4.1.5",
		"reset-css": "^5.0.1",
		"sass": "^1.62.1",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "5.0.4"
	}
}
